<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_field_layout"
        style="@style/NewUserActivityTheme.TextInputLayout.EmailField"
        android:paddingTop="64dp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/email_field"
            style="@style/NewUserActivityTheme.TextInputEditText.EmailField" />
    </android.support.design.widget.TextInputLayout>


    <com.example.authlib.ui.SupportVectorDrawablesButton
        android:id="@+id/button_next"
        style="@style/NewUserActivityTheme.Button"
        android:text="@string/auth_button_next"/>
</LinearLayout>