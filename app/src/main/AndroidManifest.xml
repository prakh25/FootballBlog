<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prakh.footballblog">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name="com.example.corelib.MyBlogApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity"/>

        <activity
            android:name=".post_detail.DetailActivity"
            android:theme="@style/DetailThemeLight" />

        <activity
            android:name=".SettingsActivity"
            android:theme="@style/SettingsTheme" />

        <activity
            android:name=".search.SearchActivity"
            android:theme="@style/DetailThemeLight"
            android:windowSoftInputMode="stateVisible" />

        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NewUserRegistrationActivity"
            android:theme="@style/NewUserActivityTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name=".FcmMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>