<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="DetailThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="NavigationMenuText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="SearchTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:hint">@string/action_search</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="LoginActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_gradient_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LoginActivityTheme.Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LoginActivityTheme.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="LoginActivityTheme.Button.AuthMethod">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/fui_auth_method_button_drawablePadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">@dimen/fui_auth_method_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/fui_auth_method_button_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="LoginActivityTheme.Button.AuthMethod.EmailButton">
        <item name="drawableStartCompat">@drawable/ic_email_white</item>
        <item name="android:background">@drawable/button_background_email</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginActivityTheme.Button.AuthMethod.GoogleButton">
        <item name="drawableStartCompat">@drawable/ic_google_color</item>
        <item name="android:background">@drawable/button_background_google</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="LoginActivityTheme.Button.AuthMethod.FacebookButton">
        <item name="drawableStartCompat">@drawable/ic_facebook_white</item>
        <item name="android:background">@drawable/button_background_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginActivityTheme.Button.AuthMethod.AnonymousButton">
        <item name="android:background">@drawable/button_background_anonymous</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginActivityTheme.Button.AuthMethod.SignUpButton">
        <item name="drawableStartCompat">@drawable/ic_person_add_white</item>
        <item name="android:background">@drawable/button_background_sign_up</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NewUserActivityTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/newUserActivityPrimaryColorDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@drawable/register_new_user_gradient_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NewUserActivityTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="NewUserActivityTheme.TextInputLayout.EmailField">
        <item name="android:hint">@string/hint_email</item>
    </style>

    <style name="NewUserActivityTheme.TextInputLayout.UsernameField">
        <item name="android:hint">@string/hint_username</item>
    </style>

    <style name="NewUserActivityTheme.TextInputLayout.DisplayNameField">
        <item name="android:hint">@string/hint_display_name</item>
    </style>

    <style name="NewUserActivityTheme.TextInputLayout.PasswordField">
        <item name="android:hint">@string/hint_password</item>
    </style>

    <style name="NewUserActivityTheme.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textInputEditText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="NewUserActivityTheme.TextInputEditText.EmailField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="NewUserActivityTheme.TextInputEditText.UserNameField">
        <item name="android:inputType">text</item>
    </style>

    <style name="NewUserActivityTheme.TextInputEditText.DisplayNameField">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="NewUserActivityTheme.TextInputEditText.PasswordField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="NewUserActivityTheme.SaveButton" parent="LoginActivityTheme.Button">
        <item name="android:background">@drawable/button_background_save</item>
        <item name="android:text">@string/btn_save</item>
        <item name="android:drawablePadding">@dimen/fui_auth_method_button_drawablePadding</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">@dimen/fui_auth_method_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/fui_auth_method_button_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
