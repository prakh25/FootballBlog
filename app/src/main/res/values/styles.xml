<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DetailThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/detail_primaryColor</item>
        <item name="colorPrimaryDark">@color/detail_primaryDark</item>
        <item name="colorAccent">@color/detail_accent</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="NavigationMenuText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="SearchTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:hint">@string/action_search</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/splash_colorPrimary</item>
        <item name="colorPrimaryDark">@color/splash_colorPrimaryDark</item>
        <item name="colorAccent">@color/splash_colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/splash_colorPrimaryDark</item>
    </style>

    <style name="DetailThemeLight.Transparent" parent="DetailThemeLight">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
