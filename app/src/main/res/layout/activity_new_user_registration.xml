<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.design.widget.TextInputLayout
            style="@style/NewUserActivityTheme.TextInputLayout.EmailField"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                style="@style/NewUserActivityTheme.TextInputEditText.EmailField" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/NewUserActivityTheme.TextInputLayout.UsernameField"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                style="@style/NewUserActivityTheme.TextInputEditText.UserNameField" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/NewUserActivityTheme.TextInputLayout.DisplayNameField"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                style="@style/NewUserActivityTheme.TextInputEditText.DisplayNameField" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/NewUserActivityTheme.TextInputLayout.PasswordField"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                style="@style/NewUserActivityTheme.TextInputEditText.PasswordField" />
        </android.support.design.widget.TextInputLayout>

        <com.example.prakh.footballblog.utils.SupportVectorDrawablesButton
            style="@style/NewUserActivityTheme.SaveButton" />
    </LinearLayout>
</ScrollView>